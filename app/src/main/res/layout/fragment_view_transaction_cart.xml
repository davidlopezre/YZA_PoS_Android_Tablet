<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pos.yza.yzapos.newtransaction.NewTransactionActivity">

    <ListView
        android:id="@+id/list_view"
        android:layout_width="649dp"
        android:layout_height="450dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
    </ListView>

    <Button
        android:id="@+id/button_view_payments"
        android:layout_width="0dp"
        android:layout_height="253dp"
        android:text="@string/view_payments"
        android:textAllCaps="false"
        android:textColor="@color/rosywhite"
        android:textSize="48sp"
        android:background="@color/eagleGreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/list_view">
    </Button>

    <TextView
        android:id="@+id/totalAmt"
        android:layout_width="650dp"
        android:layout_height="64dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Total: â‚±0.00"
        android:textSize="@dimen/font_size_h4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_view" />

</android.support.constraint.ConstraintLayout>
